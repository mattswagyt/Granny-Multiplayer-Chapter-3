createButton("Remove Slendrina", function()
    local slendrina = nil
    local foundPresetIndex = nil

    -- Search Preset1 to Preset10 for Slendrina
    for i = 1, 10 do
        local preset = workspace:FindFirstChild("Preset"..i)
        if preset and preset:FindFirstChild("Slendrina") then
            slendrina = preset.Slendrina
            foundPresetIndex = i
            break
        end
    end

    -- Also check Preset -i like you said
    if not slendrina then
        local presetNeg = workspace:FindFirstChild("Preset -i")
        if presetNeg and presetNeg:FindFirstChild("Slendrina") then
            slendrina = presetNeg.Slendrina
            foundPresetIndex = "-i"
        end
    end

    -- If found, remove her
    if slendrina then
        slendrina:Destroy()
        print("Removed Slendrina from Preset"..tostring(foundPresetIndex))
    else
        ErrorLog.Text = "Error Log: Slendrina not found in any preset"
    end
end)

createButton("Outside", function()
    LocalPlayer.Character:PivotTo(CFrame.new(2, 11, -48))
end)

createButton("Jail Cell (Spawn)", function()
    LocalPlayer.Character:PivotTo(CFrame.new(-26, 3, -38))
end)

createButton("Train", function()
    LocalPlayer.Character:PivotTo(CFrame.new(-31, -7, -36))
end)

createButton("Escape", function()
    LocalPlayer.Character:PivotTo(CFrame.new(21, 11, -97))
end)

-- ‚úÖ Full Bright
createButton("Full Bright", function()
    Lighting.Ambient = Color3.new(1, 1, 1)
    Lighting.Brightness = 3
    Lighting.FogEnd = 100000
    Lighting.ClockTime = 14
end)

-- ‚úÖ Unlock Camera
createButton("Unlock Camera", function()
    LocalPlayer.CameraMaxZoomDistance = 1000
    LocalPlayer.CameraMinZoomDistance = 0.5
end)
